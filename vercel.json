{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "app"
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/embed",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ]
}